{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["ES2018", "DOM"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
}
